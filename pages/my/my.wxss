
.header {
  text-align: center;
  height: 400rpx;
  position: relative;
  color: #fff;
  padding-top: 100rpx;
  box-sizing: border-box;
}

.banner{
  width: 100%;
  height: 400rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.userIcon{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin: 0 auto;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.username{
  padding: 20rpx;
}

.scan{
  position: absolute;
  right: 40rpx;
  top: 40rpx;
}

.right {
  position: absolute;
  top: 36rpx;
  right: 20rpx;
  width: 24rpx;
  height: 24rpx;
  padding: 10rpx;
}

.item .icon{
  margin-right: 20rpx;
}

.userinfo button{
  background: none;
  font-size: 32rpx;
  color: #fff;
  border: none;
  margin: 0;
  padding: 0;
}
.userinfo button:after{
  border: none;
}