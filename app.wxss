page{
  background: #f2f2f2;
  font-size: 32rpx;
  color: #333;
}

.flex{
  display: flex;
  align-items: center;
}
.flex-between{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.flex-cloum-center{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.flex1{
  flex: 1;
}

.item {
  position: relative;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #dcdcdc;
  background: #fff;
  display: flex;
  align-items: center;
}

.icon{
  width: 40rpx;
  height: 40rpx;
}

.btn {
  width: 90%;
  margin: 60rpx;
  margin-left: 5%;
  color: #fff;
  border: none;
  background: linear-gradient(45deg, #066af4, #0a87ff);
  font-size: 32rpx;
}